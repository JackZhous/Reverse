        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_wireless" />
        <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_net_error_hint" android:singleLine="false" style="@style/MetaSubTitle" />
