    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/layout_data_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/phone_category_exception_tip" />
        <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_data_error_hint" android:singleLine="false" style="@style/MetaSubTitle" />
    </LinearLayout>
</RelativeLayout>